<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/task_view_Button_edit2"
        android:layout_width="83dp"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="40dp"
        android:background="?attr/colorError"
        android:elevation="0dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/task_view_Button_edit"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="40dp" />
    <Button
        android:id="@+id/task_view_Button_edit"
        android:layout_width="83dp"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="72dp"
        android:background="@android:color/holo_green_light"
        android:elevation="0dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/task_view_Title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="Task Title: "
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/task_view_Title_content"
        android:layout_width="265dp"
        android:layout_height="17dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:text="&quot;Here's a sample task title&quot; MyTask1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/task_view_Title_title"
        tools:layout_editor_absoluteY="50dp"
        android:layout_marginLeft="8dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/task_view_Description_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Task Discription:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="118dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/task_view_Description_content"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="here is a smaple task description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_view_Description_title" />

    <TextView
        android:id="@+id/task_view_Status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:text="Status:"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="301dp"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="68dp" />

    <TextView
        android:id="@+id/task_view_Status_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:text="requested"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/task_view_Status_title"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="301dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp" />


</android.support.constraint.ConstraintLayout>