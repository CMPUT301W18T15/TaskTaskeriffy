<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.heesoo.myapplication.Requestor.RequestorBidDetailActivity">

    <TextView
        android:id="@+id/bidderName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:text="@string/biddername"
        android:onClick="bidderNameClicked"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView11"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/bidAmount"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="bidAmount"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/taskName"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        android:text="taskName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/bidStatus"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_marginRight="16dp"
        android:text="bidStatus"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/deleteTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/deletetask"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTask" />

    <Button
        android:id="@+id/editTask"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="editTask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/declineBid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/declinebid"
        app:layout_constraintBaseline_toBaselineOf="@+id/acceptBid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/acceptBid" />

    <Button
        android:id="@+id/acceptBid"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="acceptBid"
        app:layout_constraintBottom_toTopOf="@+id/editTask"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/viewBidderProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="View Bidder's Profile"
        app:layout_constraintBottom_toTopOf="@+id/acceptBid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Task Name:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Bid Status:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="75dp"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Bidder Name:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="75dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Bid Amount:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />
</android.support.constraint.ConstraintLayout>
